<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.video.sweettv"
       name="Sweet.tv"
       version="1.1"
       provider-name="archivczsk">
  <requires>
    <import addon="enigma2.archivczsk" version="1.6.0"/>
    <import addon="xbmc.python" version="2.1.0"/>
    <import addon="script.module.stream.resolver" version="1.6.25" />
  </requires>
  <extension point="xbmc.service" library="sweettv_service.py"/>
  <extension point="xbmc.autostart" library="sweettv_autostart.py"/>
  <extension point="xbmc.python.pluginsource" library="default.py">
    <provides>video</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <platform>all</platform>
    <summary>Sweet.tv</summary>
    <description>Plugin to play videos and live tv from sweet.tv</description>
    <description lang="sk">Plugin pre prehrávanie videí a live tv zo sweet.tv</description>
  </extension>
</addon>
