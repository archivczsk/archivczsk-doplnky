<?xml version="1.2.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.video.telly"
       name="Telly"
       version="1.0.2"
       provider-name="archivczsk">
  <requires>
    <import addon="enigma2.archivczsk" version="1.5.1"/>
    <import addon="xbmc.python" version="2.1.0"/>
    <import addon="script.module.stream.resolver" version="1.6.22" />
  </requires>
  <extension point="xbmc.service" library="telly_service.py"/>
  <extension point="xbmc.autostart" library="telly_autostart.py"/>
  <extension point="xbmc.python.pluginsource" library="default.py">
    <provides>video</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <platform>all</platform>
    <summary>Telly live plugin</summary>
    <description>Plugin to play Telly live TV</description>
    <description lang="cs">Plugin pro přehrávání Telly live TV</description>
    <description lang="sk">Plugin pre prehrávanie Telly live TVk</description>
  </extension>
</addon>
